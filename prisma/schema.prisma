// schema.prisma

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [vector]
}

// --- ENUMS ---
enum MediaType {
  TEXT
  AUDIO
  VIDEO
  LINK
}

enum ProcessingStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

enum AgentModel {
  GPT_4o_MINI
  GPT_4o
  // Futuro: CLAUDE_3_5_SONNET, etc.
}

// ==========================================
// 1. SISTEMA DE CONSULTORES (B2B - SEUS CLIENTES)
// ==========================================

// Login do Consultor (Google/NextAuth)
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  password      String?
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]

  consultantProfile ConsultantProfile?
}

model ConsultantProfile {
  id            String   @id @default(cuid())
  
  userId        String   @unique 
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  name          String?
  slug          String   @unique
  phone         String?
  
  // CONFIGS DO PLANO DO CONSULTOR
  plan          String   @default("STARTER") 
  
  // RELACIONAMENTOS
  agents        Agent[]         
  documents     Document[]
  chatSessions  ChatSession[]   
  
  // GESTÃO DE ACESSOS E CONVITES
  accessGrants  AccessGrant[]   
  invites       Invite[]
  
  // PADRONIZAÇÃO
  definedTags   ConsultantTag[] 
  definedLevels ConsultantLevel[] 

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

// ==========================================
// 2. A ENTIDADE "AGENTE" (O PRODUTO)
// ==========================================

model Agent {
  id            String     @id @default(cuid())
  name          String     // Ex: "Mentor de Vendas"
  slug          String     // Ex: "vendas-expert" (único por consultor)
  avatarUrl     String?
  description   String?    // Descrição curta para o Card na Vitrine
  
  // CÉREBRO
  systemPrompt  String     @db.Text 
  model         AgentModel @default(GPT_4o_MINI) 
  
  // ECONOMIA
  creditCost    Int        @default(1) 
  
  // CONTROLE DE ACESSO
  accessLevel   Int        @default(0) 
  requiredTags  String[]   @default([]) 

  // VÍNCULOS
  consultantId  String
  consultant    ConsultantProfile @relation(fields: [consultantId], references: [id], onDelete: Cascade)
  
  chatSessions  ChatSession[]

  isActive      Boolean    @default(true)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  @@unique([consultantId, slug]) 
}

// ==========================================
// 3. BASE DE CONHECIMENTO (RAG)
// ==========================================

model Document {
  id            String    @id @default(cuid())
  consultantId  String
  consultant    ConsultantProfile @relation(fields: [consultantId], references: [id], onDelete: Cascade)
  
  fileName      String
  fileKey       String
  summary       String?           @db.Text 
  mediaType     MediaType         @default(TEXT)
  status        ProcessingStatus  @default(PENDING)
  errorMessage  String?
  charCount     Int?      
  isIndexed     Boolean           @default(false)

  // Filtros
  tags          String[]  @default([]) 
  accessLevel   Int       @default(0)  
  
  chunks        DocumentChunk[]
  createdAt     DateTime  @default(now())

  @@index([consultantId])
}

model DocumentChunk {
  id           String   @id @default(cuid())
  consultantId String
  
  documentId   String
  document     Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
  
  content      String   @db.Text
  metadata     Json?    @default("{}")
  
  // Necessário: `CREATE EXTENSION vector` no Banco
  embedding    Unsupported("vector(1536)")?
  
  createdAt    DateTime @default(now())
  
  @@index([consultantId])
  @@index([documentId])
}

// ==========================================
// 4. HUB DE ALUNOS (SISTEMA GLOBAL - B2C)
// ==========================================

model StudentAccount {
  id            String    @id @default(cuid())
  email         String    @unique
  passwordHash  String    
  name          String?
  
  // ECONOMIA
  creditBalance Int       @default(10) 

  // ACESSOS
  accessGrants  AccessGrant[]
  
  // HISTÓRICO
  transactions  CreditTransaction[]
  chatSessions  ChatSession[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model AccessGrant {
  id               String   @id @default(cuid())
  
  studentAccountId String
  studentAccount   StudentAccount @relation(fields: [studentAccountId], references: [id], onDelete: Cascade)
  
  consultantId     String
  consultant       ConsultantProfile @relation(fields: [consultantId], references: [id], onDelete: Cascade)

  accessLevel      Int      @default(0) 
  tags             String[] @default([]) 
  
  isActive         Boolean  @default(true)
  createdAt        DateTime @default(now())

  @@unique([studentAccountId, consultantId]) 
  @@index([studentAccountId])
}

model CreditTransaction {
  id               String   @id @default(cuid())
  
  studentAccountId String
  studentAccount   StudentAccount @relation(fields: [studentAccountId], references: [id], onDelete: Cascade)
  
  amount           Int      
  description      String   
  metadata         Json?    
  
  createdAt        DateTime @default(now())
  
  @@index([studentAccountId])
}

// ==========================================
// 5. CHAT & SESSÕES
// ==========================================

model ChatSession {
  id           String   @id @default(cuid())
  title        String?
  
  agentId      String?
  agent        Agent?   @relation(fields: [agentId], references: [id], onDelete: SetNull)

  consultantId String
  consultant   ConsultantProfile @relation(fields: [consultantId], references: [id], onDelete: Cascade)

  studentId    String?  
  student      StudentAccount? @relation(fields: [studentId], references: [id], onDelete: Cascade)
  
  isDemo       Boolean  @default(false)
  messages     ChatMessage[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([consultantId])
  @@index([studentId])
}

model ChatMessage {
  id            String      @id @default(cuid())
  sessionId     String
  session       ChatSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  
  role          String      // "user" ou "assistant"
  content       String      @db.Text
  rating        Int?
  createdAt     DateTime    @default(now())
}

// ==========================================
// 6. NEXT-AUTH (APENAS PARA CONSULTORES)
// ==========================================

model Account {
  id                 String  @id @default(cuid())
  userId             String
  user               User    @relation(fields: [userId], references: [id])
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  user         User     @relation(fields: [userId], references: [id])
  expires      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ==========================================
// 7. CONVITES & CONFIGS
// ==========================================

model Invite {
  id            String    @id @default(cuid())
  email         String
  token         String    @unique 
  
  consultantId  String
  consultant    ConsultantProfile @relation(fields: [consultantId], references: [id], onDelete: Cascade)
 
  accessLevel   Int       @default(0)
  tags          String[]  @default([])
  initialCredits Int      @default(0) 

  status        String    @default("PENDING") 
  expiresAt     DateTime
  createdAt     DateTime  @default(now())

  @@index([consultantId])
}

model ConsultantTag {
  id           String            @id @default(cuid())
  name         String
  consultantId String
  consultant   ConsultantProfile @relation(fields: [consultantId], references: [id], onDelete: Cascade)
  createdAt    DateTime          @default(now())

  @@unique([consultantId, name])
}

model ConsultantLevel {
  id           String            @id @default(cuid())
  levelNumber  Int
  name         String             
  consultantId String
  consultant   ConsultantProfile @relation(fields: [consultantId], references: [id], onDelete: Cascade)

  @@unique([consultantId, levelNumber])
}